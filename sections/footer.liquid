{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "company_info",
      "label": "Company Information",
      "default": "Paddy Compare Limited is a registered company in Northern Ireland. Company Number NI614718. Paddy Compare Limited is a registered data controller. ICO Registration Number Z3663827."
    }
  ],
  "blocks": [
    {
      "type": "social_icon",
      "name": "Social Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Social Media URL"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt Text",
          "info": "Describe the social media platform for accessibility"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "social_icon"
        },
        {
          "type": "social_icon"
        },
        {
          "type": "social_icon"
        }
      ]
    }
  ]
}
{% endschema %}

<footer>
  <div class="footer-wrapper">
    <div class="container">
      <div class="inner-footer-wrapper">
        <div class="footer-top">
          <div class="footer-top-right">
            <div class="footer-top-img">
              {% if section.settings.footer_logo != blank %}
                {{
                  section.settings.footer_logo
                  | image_url: width: section.settings.logo_width
                  | image_tag: width: section.settings.logo_width, height: 'auto', alt: shop.name
                }}
              {% else %}
                <img src="{{ 'footer logo.svg' | asset_url }}" alt="{{ shop.name }}">
              {% endif %}
            </div>
          </div>
          <div class="footer-top-left">
            <div class="footer-top-elems">
              {% if linklists[section.settings.footer_menu].links != blank %}
                <ul>
                  {% for link in linklists[section.settings.footer_menu].links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
            <div class="footer-top-line"></div>
          </div>
        </div>
        <div class="footer-bottom">
          <div class="footer-bottom-text">
            <p>{{ section.settings.company_info }}</p>
          </div>
          <div class="footer-bottom-socials">
            {% for block in section.blocks %}
              {% if block.type == 'social_icon' and block.settings.icon != blank and block.settings.link != blank %}
                <a href="{{ block.settings.link }}" target="_blank" {{ block.shopify_attributes }}>
                  {{ block.settings.icon | image_url: width: 24 | image_tag: loading: 'lazy', alt: block.settings.alt }}
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
